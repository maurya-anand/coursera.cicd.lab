---
name: Scheduled ğŸ•°ï¸

on:
  schedule:
    - cron: '45 3 * * 0'
  workflow_dispatch:

jobs:
  dependency-test:
    strategy:
      fail-fast: false
      matrix:
        test-strategy: ["min", "release", "max"]
    uses: insightsengineering/r.pkg.template/.github/workflows/verdepcheck.yaml@main
    name: Dependency Test - ${{ matrix.test-strategy }} ğŸ”¢
    secrets:
      REPO_GH_PAT: ${{ secrets.GH_PAT }}
      GCHAT_WEBHOOK: ${{ secrets.GCHAT_WEBHOOK }}
    with:
      strategy: ${{ matrix.test-strategy }}
      additional-env-vars: |
        PKG_SYSREQS_DRY_RUN=true
  branch-cleanup:
    name: Branch Cleanup ğŸ§¹
    uses: insightsengineering/r.pkg.template/.github/workflows/branch-cleanup.yaml@main
    secrets:
      REPO_GH_PAT: ${{ secrets.GH_PAT }}
